@using BookByText.Models
@{
    var EMPTY = new BookModel[0];
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
    <title>Text the Book</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" type="text/css">

    <!-- Custom Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
   
    <!-- Plugin CSS -->
    <link rel="stylesheet" href="~/Content/css/animate.min.css" type="text/css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/creative.css" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top">

    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
             
            </div>
                <a class="navbar-brand page-scroll" href="#page-top">Text the Book</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1"> </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <header style="background-image: url(Content/img/background_5.jpg)">
        <div class="header-content" style="text-align: center;">
            <div class="header-content-inner">
                <h1>
                    Choose a book you want to read
                </h1>
                <div class="row">
                    <div class="col-md-4 col-lg-offset-4" style="background-color:black;">
                        <h3>Search for a book or author</h3>

                        <input type="text" id="searchTerms" />
                        <button onclick="search()">Search</button>
                        <form method="post" action="Subscription/Create">
                            <label for="Book"><h3>Book Title</h3></label>
                            <div id="searchResults">
                                @Html.Partial("~/Views/Search/Index.cshtml", EMPTY)
                            </div>
                            <label for="Number"><h3>Submit</h3></label>
                            <br />
                            <input type="text" name="Number" value="" /> <p>(e.g. 447900112233)</p>
                            <input type="submit" value="Send">
                        </form>
                    </div>
                </div>
            </div>
            <h4>Hack Manchester<br>Created by Team R2D2</h4>
        </div>
        
    </header>

    <!-- jQuery -->
    <script src="~/Scripts/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <script src="~/Scripts/jquery.fittext.js"></script>
    <script src="~/Scripts/wow.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/creative.js"></script>

    <script>
        // Search
        function search() {
            var url = "/search?query=" + $("#searchTerms").val();
            $.get(url).done(function (response) {
                $("#searchResults").html(response);
            });
        }
    </script>
    
</body>

</html>
